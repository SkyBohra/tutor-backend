# Server Configuration
APP_NAME=AI-Teacher
APP_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
MONGO_URI=mongodb://localhost:27017/ai-teacher
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# ElevenLabs (Text-to-Speech for Avatar)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# Replicate (For Image/Video Generation)
REPLICATE_API_TOKEN=your-replicate-api-token

# Stability AI (Image Generation)
STABILITY_API_KEY=your-stability-api-key

# D-ID or HeyGen (Avatar Video Generation)
DID_API_KEY=your-did-api-key
HEYGEN_API_KEY=your-heygen-api-key

# AWS S3 (For storing generated media)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=ai-teacher-media
AWS_REGION=us-east-1

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
